{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": true,
    "customConditions": ["dev"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "#macros": ["../../macros/index.ts"]
    },
    "resolveJsonModule": true,
    "types": ["vue/jsx"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "plugins": ["@vue-macros/volar"],
    "experimentalDefinePropProposal": "kevinEdition",

    "vueMacros": {
      "scriptLang": true,
      "setupSFC": true,
      "booleanProp": true,
      "defineEmit": true,
      "defineProp": true,
      "templateRef": true,
      "defineGeneric": true,
      "exportExpose": {
        "include": ["**/export-expose/**"]
      },
      "exportProps": {
        "include": ["**/export-props/**"]
      }
    }
  },
  "include": ["src", "*", "../../packages/shim.d.ts"]
}
