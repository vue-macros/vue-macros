{
  "name": "monorepo-vue-macros",
  "version": "3.0.0-beta.20",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "description": "Monorepo for Vue Macros.",
  "type": "module",
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/vue-macros",
  "scripts": {
    "build": "pnpm run --filter=\"./packages/*\" --parallel build && tsdown",
    "dev": "DEV=true tsdown",
    "clean": "rimraf -g dist coverage \"packages/*/dist\" && pnpm run -r --parallel clean",
    "docs:dev": "pnpm run -C ./docs dev",
    "docs:preview": "pnpm run -C ./docs preview",
    "docs:build": "pnpm run -C ./docs build",
    "play": "pnpm run play:vue3",
    "play:vue3": "pnpm run -C ./playground/vue3 dev",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ecosystem": "pnpm test run && pnpm typecheck",
    "lint": "eslint --max-warnings 0 --cache .",
    "cspell:check": "cspell \"**\" --no-progress",
    "format": "prettier --write --cache .",
    "format:check": "prettier --check --cache .",
    "mono": "monoman",
    "mono:check": "monoman --check",
    "publint": "tsx publint.ts",
    "release": "bumpp -r",
    "typecheck": "pnpm run /^typecheck:/",
    "typecheck:lib": "vue-tsc --noEmit -p tsconfig.lib.json",
    "typecheck:test": "vue-tsc --noEmit -p tsconfig.test.json",
    "typecheck:docs": "vue-tsc --noEmit -p ./docs/tsconfig.json",
    "typecheck:fixture": "vue-tsc --noEmit -p tsconfig.fixture.json",
    "typecheck:playground": "pnpm run -C ./playground/vue3 typecheck"
  },
  "devDependencies": {
    "@babel/types": "catalog:",
    "@rspack/core": "catalog:",
    "@sxzz/eslint-config": "catalog:",
    "@sxzz/prettier-config": "catalog:",
    "@types/node": "catalog:",
    "@unocss/eslint-plugin": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "@vue-macros/test-utils": "workspace:*",
    "bumpp": "catalog:",
    "change-case": "catalog:",
    "cspell": "catalog:",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "expect-type": "catalog:",
    "fast-glob": "catalog:",
    "jiti": "catalog:",
    "monoman": "catalog:",
    "oxc-transform": "catalog:",
    "pkg-types": "catalog:",
    "prettier": "catalog:",
    "publint": "catalog:",
    "radix-vue": "catalog:",
    "rimraf": "catalog:",
    "rolldown": "catalog:",
    "rollup": "catalog:",
    "rollup-plugin-dts": "catalog:",
    "taze": "catalog:",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "unocss": "catalog:",
    "unplugin": "catalog:",
    "unplugin-macros": "catalog:",
    "unplugin-quansync": "catalog:",
    "unplugin-raw": "catalog:",
    "unplugin-unused": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-macros": "workspace:*",
    "vue-tsc": "catalog:",
    "webpack": "catalog:"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "prettier": "@sxzz/prettier-config"
}
