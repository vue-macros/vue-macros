{
  "name": "monorepo-unplugin-vue-macros",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.2.0",
  "description": "Monorepo for Vue Macros.",
  "type": "module",
  "author": "三咲智子 <sxzz@sxzz.moe>",
  "scripts": {
    "build": "pnpm run --filter=\"./packages/*\" --parallel build",
    "dev": "pnpm run --filter=\"./packages/*\" --parallel dev",
    "clean": "rimraf packages/*/dist",
    "docs:dev": "pnpm run -C ./docs dev",
    "docs:preview": "pnpm run -C ./docs preview",
    "docs:build": "pnpm run -C ./docs build",
    "play": "pnpm run play:vue3",
    "play:vue2": "pnpm run -C ./playground/vue2 dev",
    "play:vue3": "pnpm run -C ./playground/vue3 dev",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ecosystem": "run-p test typecheck",
    "lint": "eslint --max-warnings 0 --cache .",
    "cspell:check": "cspell \"**\" --no-progress",
    "format": "prettier --write --cache .",
    "format:check": "prettier --check --cache .",
    "mono": "monoman",
    "mono:check": "monoman --check",
    "publint": "tsx publint.ts",
    "publish": "pnpm build && changeset publish",
    "typecheck": "run-p -l \"typecheck:**\"",
    "typecheck:lib": "vue-tsc --noEmit -p tsconfig.lib.json",
    "typecheck:test": "vue-tsc --noEmit -p tsconfig.test.json",
    "typecheck:docs": "vue-tsc --noEmit -p ./docs/tsconfig.json",
    "typecheck:fixture": "vue-tsc --noEmit -p tsconfig.fixture.json",
    "typecheck:playground:vue3": "pnpm run -C ./playground/vue3 typecheck",
    "typecheck:playground:vue2": "pnpm run -C ./playground/vue2 typecheck"
  },
  "devDependencies": {
    "@babel/types": "catalog:",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12",
    "@rspack/core": "^1.2.2",
    "@sxzz/eslint-config": "^5.0.1",
    "@sxzz/prettier-config": "^2.1.1",
    "@types/node": "^22.13.1",
    "@types/picomatch": "^3.0.2",
    "@unocss/eslint-plugin": "^65.4.3",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "@vue-macros/test-utils": "workspace:*",
    "change-case": "^5.4.4",
    "cspell": "^8.17.3",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "expect-type": "^1.1.0",
    "fast-glob": "^3.3.3",
    "importx": "^0.5.1",
    "monoman": "^0.6.4",
    "npm-run-all2": "^7.0.2",
    "oxc-transform": "^0.48.2",
    "pkg-types": "^1.3.1",
    "prettier": "catalog:",
    "publint": "^0.3.2",
    "radix-vue": "^1.9.13",
    "rimraf": "^6.0.1",
    "rolldown": "^1.0.0-beta.3",
    "rollup": "catalog:",
    "rollup-plugin-dts": "^6.1.1",
    "taze": "^18.4.0",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "catalog:",
    "unocss": "catalog:",
    "unplugin": "catalog:",
    "unplugin-isolated-decl": "^0.10.6",
    "unplugin-macros": "^0.14.1",
    "unplugin-raw": "^0.4.0",
    "unplugin-unused": "^0.3.0",
    "unplugin-vue-macros": "workspace:*",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:",
    "vue2": "npm:vue@^2.7.16",
    "webpack": "^5.97.1"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "nuxt",
        "@algolia/client-search",
        "search-insights",
        "pug"
      ],
      "allowAny": [
        "vue"
      ]
    },
    "overrides": {
      "esbuild": "catalog:",
      "is-core-module": "npm:@no-shims/is-core-module",
      "shiki": "catalog:",
      "smartwrap": "npm:@no-shims/smartwrap",
      "vitepress": "catalog:"
    }
  },
  "prettier": "@sxzz/prettier-config"
}
