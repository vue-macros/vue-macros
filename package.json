{
  "name": "monorepo-vue-macros",
  "version": "3.0.0-beta.4",
  "private": true,
  "packageManager": "pnpm@10.6.1",
  "description": "Monorepo for Vue Macros.",
  "type": "module",
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/vue-macros",
  "scripts": {
    "build": "pnpm run --filter=\"./packages/*\" --parallel build",
    "dev": "pnpm run --filter=\"./packages/*\" --parallel dev",
    "clean": "rimraf packages/*/dist",
    "docs:dev": "pnpm run -C ./docs dev",
    "docs:preview": "pnpm run -C ./docs preview",
    "docs:build": "pnpm run -C ./docs build",
    "play": "pnpm run play:vue3",
    "play:vue3": "pnpm run -C ./playground/vue3 dev",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ecosystem": "pnpm test run && pnpm typecheck",
    "lint": "eslint --max-warnings 0 --cache .",
    "cspell:check": "cspell \"**\" --no-progress",
    "format": "prettier --write --cache .",
    "format:check": "prettier --check --cache .",
    "mono": "monoman",
    "mono:check": "monoman --check",
    "publint": "tsx publint.ts",
    "release": "bumpp -r",
    "typecheck": "pnpm run /^typecheck:/",
    "typecheck:lib": "vue-tsc --noEmit -p tsconfig.lib.json",
    "typecheck:test": "vue-tsc --noEmit -p tsconfig.test.json",
    "typecheck:docs": "vue-tsc --noEmit -p ./docs/tsconfig.json",
    "typecheck:fixture": "vue-tsc --noEmit -p tsconfig.fixture.json",
    "typecheck:playground": "pnpm run -C ./playground/vue3 typecheck"
  },
  "devDependencies": {
    "@babel/types": "catalog:",
    "@rspack/core": "^1.2.7",
    "@sxzz/eslint-config": "^6.0.1",
    "@sxzz/prettier-config": "^2.2.1",
    "@types/node": "^22.13.10",
    "@unocss/eslint-plugin": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "@vue-macros/test-utils": "workspace:*",
    "bumpp": "^10.0.3",
    "change-case": "^5.4.4",
    "cspell": "^8.17.5",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "expect-type": "^1.2.0",
    "fast-glob": "^3.3.3",
    "jiti": "^2.4.2",
    "monoman": "^0.6.7",
    "oxc-transform": "^0.56.5",
    "pkg-types": "^2.1.0",
    "prettier": "catalog:",
    "publint": "^0.3.8",
    "radix-vue": "^1.9.17",
    "rimraf": "^6.0.1",
    "rolldown": "^1.0.0-beta.3",
    "rollup": "catalog:",
    "rollup-plugin-dts": "^6.1.1",
    "taze": "^18.7.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "catalog:",
    "unocss": "catalog:",
    "unplugin": "catalog:",
    "unplugin-isolated-decl": "^0.13.2",
    "unplugin-macros": "^0.16.1",
    "unplugin-quansync": "^0.3.4",
    "unplugin-raw": "^0.4.4",
    "unplugin-unused": "^0.4.3",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-macros": "workspace:*",
    "vue-tsc": "catalog:",
    "webpack": "^5.98.0"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "nuxt",
        "@algolia/client-search",
        "search-insights",
        "pug"
      ],
      "allowAny": [
        "vue"
      ]
    },
    "overrides": {
      "@shikijs/core": "catalog:",
      "@shikijs/transformers": "catalog:",
      "@shikijs/types": "catalog:",
      "esbuild": "catalog:",
      "is-core-module": "npm:@no-shims/is-core-module",
      "shiki": "catalog:",
      "smartwrap": "npm:@no-shims/smartwrap",
      "unconfig": "catalog:"
    }
  },
  "prettier": "@sxzz/prettier-config"
}
